<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout

        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/recycler_image2"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/empty"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/recycler_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_toRightOf="@id/recycler_image2"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:fontFamily="@font/bungee"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/recycler_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_title2"
            android:layout_toRightOf="@id/recycler_image2"
            android:paddingLeft="10dp"
            android:text="Description of first recycleview.Jico san Buenaventura panget mo tanga." />
    </RelativeLayout>

</androidx.cardview.widget.CardView>